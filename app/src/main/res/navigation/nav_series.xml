<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_series"
    app:startDestination="@id/navigation_series">

    <fragment
        android:id="@+id/navigation_series"
        android:name="com.jramirez.instamovies.presentation.series.SeriesFragment"
        android:label="@string/title_series"
        tools:layout="@layout/fragment_media">
        <action
            android:id="@+id/action_navigation_series_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.jramirez.instamovies.presentation.detail.DetailFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>