<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movies">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.jramirez.instamovies.presentation.movies.MoviesFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_navigation_movies_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_series"
        android:name="com.jramirez.instamovies.presentation.series.DashboardFragment"
        android:label="@string/title_series"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_series_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.jramirez.instamovies.presentation.detail.NotificationsFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_notifications" />
</navigation>